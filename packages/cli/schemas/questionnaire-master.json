{
    "overrideDirectory": [{
        "name": "ok",
        "type": "confirm",
        "message": "Generate project in current directory?"
    }],
    "projectType": [{
        "name": "variant",
        "type": "list",
        "message": "Select a project type:",
        "choices": ["application", "library"]
    }],
    "main": [{
            "name": "description",
            "type": "input",
            "message": "Enter project description:",
            "default": "Demo Project"
        },
        {
            "name": "author",
            "type": "input",
            "message": "Enter name of author:",
            "default": ""
        },
        {
            "name": "version",
            "type": "input",
            "message": "Enter version number",
            "default": "1.0.0"
        },
        {
            "name": "license",
            "type": "input",
            "message": "Enter your license type:",
            "default": "MIT"
        },
        {
            "name": "doc",
            "type": "list",
            "message": "Use esdoc generator:",
            "default": false,
            "choices": [
                { "name": "yes", "value": true },
                { "name": "no", "value": false }
            ]
        }
    ],
    "sourceRoot": [{
        "name": "sourceroot",
        "type": "input",
        "message": "What folder should your source code live in?",
        "default": "[name]"
    }],
    "prefix": [{
        "name": "prefix",
        "type": "input",
        "message": "enter naming convention:",
        "default": "app"
    }],
    "application": [{
        "name": "router",
        "type": "list",
        "message": "use jeli router",
        "default": true,
        "choices": [
            { "name": "yes", "value": true },
            { "name": "no", "value": false }
        ]
    }, {
        "name": "style",
        "type": "list",
        "message": "Select cssProcessor:",
        "default": "scss",
        "choices": ["css", "scss"]
    }],
    "packageManager": [{
        "name": "packagemanager",
        "type": "list",
        "message": "select a packageManager:",
        "default": "npm",
        "choices": []
    }],
    "directoryExist": [{
        "name": "dirOption",
        "type": "list",
        "message": "Directory already exists. Pick an action:",
        "choices": [
            { "name": "Overwrite", "value": 2 },
            { "name": "Cancel", "value": 0 }
        ]
    }],
    "gitInit": [{
        "name": "initGit",
        "type": "list",
        "message": "Git init",
        "default": true,
        "choices": [
            { "name": "yes", "value": true },
            { "name": "no", "value": false }
        ]
    }]
}